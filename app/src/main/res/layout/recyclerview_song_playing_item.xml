<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_phone"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10px"
        >

        <ImageView
            android:id="@+id/pop_play_status_image"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/song_info_songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/color_song_name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/dividing_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/song_info_songName"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="-" />

        <TextView
            android:id="@+id/song_info_singerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/tv_phone"
            android:maxLines="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:src="@drawable/actionbar_delete"/>

</RelativeLayout>
