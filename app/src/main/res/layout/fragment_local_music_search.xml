<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_orange_red"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/out_local_album"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/cm2_act_view_btn_back" />

        <TextView
            android:id="@+id/head_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/all_choose"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
    </LinearLayout>
    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/show_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <LinearLayout
            android:id="@+id/show_local"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/begin_seach"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="开始扫描"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/seaching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在扫描本地歌曲......"
                android:textColor="@color/colorBlack"
                android:visibility="gone" />

            <TextView
                android:id="@+id/what_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="scard"
                android:textColor="#8b8989"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
    <!--中间部分-->
    <Button
        android:id="@+id/sure_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#d1d0d0"
        android:text="确定"
        android:textColor="@color/colorWhite"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="79dp" />

</LinearLayout>
